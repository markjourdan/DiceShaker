<UserControl x:Class="Coding4Fun.DiceShaker.Application.Controls.Monopoly" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:Controls="clr-namespace:Coding4Fun.DiceShaker.Application.Controls" mc:Ignorable="d" FontFamily="{StaticResource PhoneFontFamilyNormal}" FontSize="{StaticResource PhoneFontSizeNormal}" Foreground="{StaticResource PhoneForegroundBrush}" d:DesignHeight="480" d:DesignWidth="480">

	<Grid x:Name="LayoutRoot" Background="Transparent">
		<Grid.RowDefinitions>
			<RowDefinition Height="480" />
		</Grid.RowDefinitions>

		<!--ContentPanel - rows will dynamically be added-->
		<StackPanel x:Name="Content" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center">
			<Grid x:Name="ContentPanel" Margin="0,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="240" />
                    <RowDefinition Height="240" />
                </Grid.RowDefinitions>
                <Controls:Dice x:Name="dice1" Grid.Row="0" Height="200" Width="200"></Controls:Dice>
                <Controls:Dice x:Name="dice2" Grid.Row="1" Height="200" Width="200"></Controls:Dice>
			</Grid>
		</StackPanel>
	</Grid>
</UserControl>